{
  "name": "appc.mssql",
  "description": "MSSQL connector",
  "version": "1.4.0",
  "author": "Dawson Toth",
  "maintainers": [
    "Dawson Toth <dtoth@appcelerator.com>"
  ],
  "license": "Apache-2",
  "framework": "none",
  "keywords": [
    "arrow",
    "arrow-connector",
    "appc-cli-plugin",
    "mssql",
    "microsoft",
    "microsoft sql",
    "microsoft sql server",
    "azure",
    "appcelerator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/appcelerator/appc.mssql"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "start": "appc run",
    "build": "npm run clean && npm run build:dev && npm run security",
    "build:dev": "npm run build:dist",
    "build:dist": "babel -d ./dist ./lib",
    "security": "retire --exitwith 0 --outputpath scan-retire.json && nsp check --output json > scan-nsp.json",
    "lint": "standard --fix | snazzy",
    "clean": "rimraf ./tmp && rimraf dist/* coverage/*",
    "test": "npm run security && npm run lint && npm run test:unit && npm run clean",
    "test:coverage": "nyc check-coverage --lines 90 --functions 95 --branches 85 --statements 90",
    "test:unit": "tap ./test/unit/* --color --bail --cov --coverage-report=html && npm run test:coverage",
    "test:integration": "grunt"
  },
  "private": true,
  "dependencies": {
    "async": "^0.9.0",
    "lodash": "^3.10.1",
    "mssql": "^1.3.0",
    "semver": "^5.0.3"
  },
  "devDependencies": {
    "arrow": "^*",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.0.0",
    "babel-istanbul": "^0.12.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-2": "^6.22.0",
    "eslint": "3.18.0",
    "eslint-config-standard": "7.1.0",
    "eslint-plugin-standard": "2.1.1",
    "grunt": "^0.4.5",
    "grunt-mocha-test": "^0.12.0",
    "mocha": "^1.21.4",
    "nsp": "2.6.3",
    "nyc": "10.1.2",
    "retire": "1.2.12",
    "rimraf": "2.6.1",
    "should": "^4.0.4",
    "sinon": "1.17.7",
    "snazzy": "6.0.0",
    "standard": "9.0.1",
    "tap": "10.3.0"
  },
  "standard": {
    "ignore": [
      "test/integration/**"
    ]
  }
}
