{
  "name": "appc.mssql",
  "description": "MSSQL connector",
  "version": "1.2.2",
  "author": "Dawson Toth",
  "maintainers": [
    "Dawson Toth <dtoth@appcelerator.com>"
  ],
  "license": "Apache-2",
  "framework": "none",
  "keywords": [
    "arrow",
    "arrow-connector",
    "appc-cli-plugin",
    "mssql",
    "microsoft",
    "microsoft sql",
    "microsoft sql server",
    "azure",
    "appcelerator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/appcelerator/appc.mssql"
  },
  "scripts": {
    "start": "appc run",
    "lint": "standard --fix | snazzy",
    "check-security": "nsp check || true",
    "check-deps": "retire || true",
    "clean": "rimraf ./tmp",
    "checks": "npm run check-deps && npm run check-security",
    "test": "npm run checks && npm run test:unit && npm run clean",
    "test:coverage": "nyc check-coverage --lines 90 --functions 95 --branches 85 --statements 90",
    "test:unit": "tap ./test/unit/* --color --bail --coverage --coverage-report=html && npm run test:coverage",
    "test:integration": "grunt"
  },
  "private": true,
  "dependencies": {
    "async": "^0.9.0",
    "lodash": "^3.10.1",
    "mssql": "^1.3.0",
    "semver": "^5.0.3"
  },
  "devDependencies": {
    "arrow": "^*",
    "grunt": "^0.4.5",
    "grunt-mocha-test": "^0.12.0",
    "mocha": "^1.21.4",
    "mockery": "^2.0.0",
    "nyc": "^10.1.2",
    "should": "^4.0.4",
    "sinon": "^1.17.7",
    "snazzy": "^6.0.0",
    "standard": "^9.0.1",
    "tap": "^10.3.0"
  },
  "standard": {
    "ignore": [
      "test/integration/**"
    ]
  }
}
